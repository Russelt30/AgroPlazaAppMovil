<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ui.home.GenerarPedido">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="#8BC34A">

        <Button
            android:id="@+id/btn_atras_compra"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/float_transparent"
            android:background="@color/float_transparent"
            android:drawableLeft="@drawable/ic_arrow_back"
            android:drawableTint="@color/black"

           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/float_transparent"
            android:gravity="center"
            android:padding="5dp"
            android:text="Detalle Compra"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageview"
            android:src="@drawable/backgroundlogin"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="180dp"
            android:height="180dp"
            android:scaleType="fitXY"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="20dp">


        <Button
            android:id="@+id/btndisminuir"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="13dp"
            android:layout_marginVertical="4dp"
            android:background="@drawable/btn_compra"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_baseline_horizontal_rule_24"
            />

        <TextView
            android:id="@+id/cantidad"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="13dp"
            android:layout_marginVertical="3dp"
            android:layout_gravity="center"
            android:layout_marginRight="3dp"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnaumentar"
            android:layout_marginRight="9dp"
            android:layout_marginTop="3dp"
            android:layout_marginVertical="4dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@drawable/btn_compra"
            android:drawableLeft="@drawable/ic_baseline_add_24"/>

    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            android:text="Vendedor:"
            android:textColor="@color/black" />
        <EditText
            android:id="@+id/vendedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edit_style"
            android:drawablePadding="4dp"
            android:hint="Vendedor"
            android:inputType="text"
            android:paddingLeft="10dp" />

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Cantidad:"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/cantidad_pedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_style"
            android:drawablePadding="4dp"
            android:hint="cantidad"
            android:inputType="text"
            android:paddingLeft="10dp" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Total:"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/Total_pedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edit_style"
            android:drawablePadding="2dp"
            android:hint="Valor Total"
            android:inputType="text"
            android:paddingLeft="10dp" />

     </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="16sp"
        android:text="DirecciÃ³n:"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/direccion_pedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edit_style"
        android:drawablePadding="4dp"
        android:hint="Ingrese la direccion de residencia"
        android:inputType="text"
        android:paddingLeft="10dp" />

    <Button
        android:id="@+id/solicitar_pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/green"
        android:padding="10dp"
        android:text="Genera Pedido" />

</LinearLayout>